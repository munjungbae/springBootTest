<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zeus.mapper.MemberMapper">
	<insert id="create" parameterType="Member">
		<selectKey keyProperty="userNo" resultType="int" order="BEFORE">
			select mybatismember_seq.NEXTVAL FROM DUAL
		</selectKey> INSERT INTO
		mybatismember (user_no, user_id, user_pw, user_name) VALUES
		(#{userNo}, #{userId}, #{userPw}, #{userName}) </insert>
	<insert id="createAuth">
		INSERT INTO mybatismember_auth (user_no, auth) VALUES (#{userNo}, #{auth})
	</insert>
</mapper>